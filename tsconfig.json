{
    "compilerOptions": {
        "target": "ES2016",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "forceConsistentCasingInFileNames": true,
        "noUnusedParameters": true,
        "pretty": true,
        "strictNullChecks": true,
        "strict": true,
        "lib": ["es5", "es2015", "es2016", "es2017"],
        "types": ["jest", "lodash"]
    },
    "include": [
        "src/*",
        "src/**/*",
        "spec/**/*"
    ]
}
