{
  "name": "deceiver-core",
  "version": "1.0.0-beta.10",
  "description": "Core of Deceiver library",
  "main": "index.js",
  "types": "index.d.ts",
  "typings": "index.d.ts",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^23.1.0",
    "jest": "^23.1.0",
    "jest-junit": "^5.0.0",
    "nodemon": "^1.17.5",
    "prettier": "^1.13.5",
    "ts-jest": "^22.4.6",
    "ts-node": "^6.1.1",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "tslint-microsoft-contrib": "^5.0.3",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.9.2"
  },
  "scripts": {
    "build": "tsc -p tsconfig.release.json",
    "watch": "tsc -w",
    "lint": "tslint --project ./",
    "lint:watch": "nodemon --exec 'npm run lint'",
    "test": "jest",
    "test:ci": "JEST_JUNIT_OUTPUT='test_results/unit.xml' jest --ci --testResultsProcessor=jest-junit",
    "test:all": "npm run test && npm run lint",
    "test:watch": "nodemon --exec 'npm run test:all'"
  },
  "author": "Andrzej KopeÄ‡ <andrzej.kopec@outlook.com>",
  "repository": {
    "type": "git",
    "url": "git@github.com:kapke/Deceiver-core.git"
  },
  "dependencies": {
    "@types/lodash": "^4.14.109",
    "lodash": "^4.17.10"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
