{
  "name": "deceiver-core",
  "version": "1.0.0-beta.9",
  "description": "Core of Deceiver library",
  "main": "index.js",
  "types": "index.d.ts",
  "typings": "index.d.ts",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^21.1.5",
    "jest": "^21.2.1",
    "jest-junit": "^3.1.0",
    "nodemon": "^1.11.0",
    "prettier": "^1.7.4",
    "ts-jest": "^21.1.4",
    "ts-node": "^3.2.0",
    "tslint": "^5.5.0",
    "tslint-config-prettier": "^1.6.0",
    "tslint-microsoft-contrib": "^5.0.1",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.4.1"
  },
  "scripts": {
    "build": "tsc -p tsconfig.release.json",
    "watch": "tsc -w",
    "lint": "tslint --project ./",
    "lint:watch": "nodemon --exec 'npm run lint'",
    "test": "jest",
    "test:ci": "JEST_JUNIT_OUTPUT='test_results/unit.xml' jest --ci --testResultsProcessor=jest-junit",
    "test:all": "npm run test && npm run lint",
    "test:watch": "nodemon --exec 'npm run test:all'"
  },
  "author": "Andrzej KopeÄ‡ <andrzej.kopec@outlook.com>",
  "repository": {
    "type": "git",
    "url": "git@github.com:kapke/Deceiver-core.git"
  },
  "dependencies": {
    "@types/lodash": "*",
    "lodash": "^4.17.4"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
